<div class="img-header">
    <div class="img-header__image" style="background-image:url('Content/Boat/boat-stern.jpg')"></div>
    <div class="img-header__text-container">
        <h1>@Model.Title</h1>
        <p>@Model.Subtitle</p>
    </div>
</div>

<div class="content">
    
    <h2 class="boat__interior-title">@Model.InteriorTitle</h2>
    <p class="boat__interior-text">@Model.InteriorText</p>
    <div class="card__container">
        @foreach (var src in Model.ImageUrls)
        {
            <div class="card__item">
                <div class="card__item-container">
                    <div class="overlay-gradiant"></div>
                    <div class="card__img-holder">
                        <img alt="@src" src="@src" class="card__img" />
                    </div>
                </div>
            </div>
        }
    </div>

</div>

